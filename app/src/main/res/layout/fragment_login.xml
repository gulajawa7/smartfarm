<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <LinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/roun_rect_blue"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/img_login"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/logoround"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <!--Email-->
        <TextView
            android:id="@+id/txt_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_email"
            android:inputType="textEmailAddress"
            />

        <!--Password-->
        <TextView
            android:id="@+id/txt_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_password"
            android:inputType="textPassword"/>

        <!--Button Login-->
        <TextView
            android:id="@+id/fitur_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/roun_rect_yellow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_register_penjual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_login"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txt_info_penjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apakah anda seorang pedagang?"
            android:textColor="@color/purple"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/txt_register_penjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Sekarang !"
            android:textColor="@color/yellow"/>
    </LinearLayout>

</RelativeLayout>